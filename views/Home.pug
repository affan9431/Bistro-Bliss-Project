                                img(src="/images/fastest-food-image-1.png", alt="Fast Food Image")
                            .image-2 
                                img.hide(src="/images/fastest-food-image-2.png", alt="Fast Food Image")
                                img.hide(src="/images/fastest-food-image-3.png", alt="Fast Food Image")
